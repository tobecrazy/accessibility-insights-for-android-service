<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.microsoft.accessibilityinsightsforandroidservice">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/blue_launcher"
        android:theme="@style/Theme.AppCompat"
        android:label="@string/accessibility_service_label">
        <activity android:name="com.gui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".AccessibilityInsightsForAndroidService"
            android:exported="false"
            android:label="@string/accessibility_service_label"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_insights_service" />
        </service>

        <activity
            android:name="com.gui.ScreenshotActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:label="@string/accessibility_service_label" />
    </application>

</manifest>